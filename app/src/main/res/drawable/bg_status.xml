<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Warna latar -->
    <solid android:color="@color/status_bg" />

    <!-- Sudut melengkung -->
    <corners android:radius="12dp" />

    <!-- Padding dalam (opsional jika ingin teks sedikit lega) -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp" />

    <!-- Garis tepi tipis (opsional) -->
    <stroke
        android:width="1dp"
        android:color="@color/status_border" />
</shape>
