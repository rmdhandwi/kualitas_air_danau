<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Saat focus (cursor aktif) -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFFFF"/>      <!-- putih -->
            <stroke android:width="2dp" android:color="#2196F3"/> <!-- border biru -->
            <corners android:radius="12dp"/>        <!-- sudut bulat -->
        </shape>
    </item>

    <!-- Saat ditekan tapi belum fokus -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFF5F5F5"/>      <!-- abu sangat muda -->
            <stroke android:width="2dp" android:color="#64B5F6"/> <!-- biru muda -->
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <!-- Default (tidak fokus/tidak ditekan) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFF5F5F5"/>      <!-- abu muda -->
            <stroke android:width="1dp" android:color="#BDBDBD"/> <!-- border abu -->
            <corners android:radius="12dp"/>
        </shape>
    </item>

</selector>
