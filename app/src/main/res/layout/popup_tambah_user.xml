        <EditText
            android:id="@+id/etNoTelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_input"
            android:drawableStart="@drawable/ic_telp_resized"
            android:drawablePadding="10dp"
            android:drawableTint="#B7B7B7"
            android:hint="No. Telepon"
            android:inputType="phone"
            android:padding="12dp"
            android:textColorHint="#A2A2A2"
            tools:ignore="Autofill,HardcodedText" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_input"
            android:drawableStart="@drawable/ic_lock_resized"
            android:drawableEnd="@drawable/ic_visibility_resized"
            android:drawablePadding="10dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textColorHint="#A2A2A2"
            tools:ignore="Autofill,HardcodedText" />

        <EditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_input"
            android:drawableStart="@drawable/ic_lock_resized"
            android:drawableEnd="@drawable/ic_visibility_resized"
            android:drawablePadding="10dp"
            android:hint="Konfirmasi Password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textColorHint="#A2A2A2"
            tools:ignore="Autofill,HardcodedText" />


        <Button
            android:id="@+id/btnSimpanUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/btn_global"
            android:text="Simpan"
            android:textColor="#FFF"
            tools:ignore="HardcodedText" />
